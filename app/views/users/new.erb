<%if @errors %>
  <% @errors.each do |error| %>
    <p> <%= "#{error}!"%></p>
  <% end %>
<% end %>

<div class="container">
<h1>Sign Up</h1>
  <form action="/signup" method="post">
    <label>username: </label>
    <input type="text" name="user[username]" placeholder="username"><br><br>
     <label>email: </label>
    <input type="email" name="user[email" placeholder="email@email.com"><br><br>
    <label>Password: </label>
    <input type="password" name="user[password]" placeholder="password..."><br><br>
    <input type="submit" value="Sign Up">
  </form>
</div>
